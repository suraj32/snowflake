.row.mb-3.mt-5
  %h3 Listing Tracks
  
%table#tracksTable.display.table.table-bordered.table-hover
  %thead
    %tr
      %th Track
      %th Track category
      %th Role
      %th Actions
  %tbody
    - @tracks.each do |track|
      %tr
        %td= track.name
        %td= track.track_category.name
        %td= track.track_category.role.name
        %td
          = link_to 'Edit', edit_track_path(track), class: 'btn btn-info btn-sm'
          = link_to 'Destroy', track_path(track), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'