.row.mb-3.mt-5
  .col-7
    %h3 Listing Cycles
  .col-5
    = link_to 'Add new cycle', new_cycle_path, class: 'btn btn-primary btn-md'
  
%table#cyclesTable.display.table.table-bordered.table-hover
  %thead
    %tr
      %th Employee assessment starts at
      %th Employee assessment ends at
      %th Manager assessment starts at
      %th Manager assessment ends at
      %th Is open?
      %th Actions
  %tbody
    - @cycles.each do |cycle|
      %tr
        %td= cycle.emp_duration_start
        %td= cycle.emp_duration_end
        %td= cycle.manager_duration_start
        %td= cycle.manager_duration_end
        %td= cycle.is_open ? 'Yes' : 'No'
        %td
          = link_to 'Edit', edit_cycle_path(cycle), class: 'btn btn-info btn-sm'
          = link_to 'Destroy', cycle_path(cycle), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'
          = link_to 'Assessments', cycle_assessment_results_path(cycle), class: 'btn btn-info btn-sm'