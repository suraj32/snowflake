.container
  .row.mb-3.mt-5
    .col-7
      %h3 Listing Files
    .col-5
      = link_to 'Import new file', new_upload_path, class: 'btn btn-primary btn-md'
    
  %table.table.table-bordered.table-hover
    %thead
      %tr
        %th File
        %th Type of file
        %th Report
        %th Actions
    %tbody
      - @uploads.each do |upload|
        %tr
          %td= upload.file
          %td= upload.type_of_file
          %td 
            =link_to 'Destroy', upload_path(upload), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'
            = link_to 'Canteen Admin', canteen_admins_path(canteen), class: 'btn btn-info btn-sm'