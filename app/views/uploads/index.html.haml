.container
  .row.mb-3.mt-5
    .col-7
      %h3 Listing Files
    .col-3
    .col-2
      = link_to 'Import new file', new_upload_path, class: 'btn btn-primary btn-md'
    
  %table.table.table-bordered.table-hover
    %thead
      %tr
        %th Type of file
        %th File
        %th Report
        %th Created at
        %th Actions
    %tbody
      - @uploads.each do |upload|
        %tr
          %td= upload.type_of_file  
          %td= link_to "#{File.basename(upload.input_file.path)}", upload.input_file.url
          %td= link_to "#{File.basename(upload.csv_report.path)}", upload.csv_report.url
          %td= upload.created_at.time.strftime "%d/%m/%Y %H:%M:%S"
          %td= link_to 'Destroy', upload_path(upload), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'