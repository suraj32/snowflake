.row.mb-3.mt-5
  %h3 Listing Levels
  
%table#levelsTable.display.table.table-bordered.table-hover
  %thead
    %tr
      %th Seq. no.
      %th Description
      %th Track
      %th Track category
      %th Role
      %th Actions
  %tbody
    - @levels.each do |level|
      %tr
        %td= level.seq_no
        %td= level.description
        %td= level.track.name
        %td= level.track.track_category.name
        %td= level.track.track_category.role.name
        %td
          = link_to 'Edit', edit_level_path(level), class: 'btn btn-info btn-sm'
          = link_to 'Destroy', level_path(level), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'